@model CallingScore.Web.Models.ToShowCharByCampaignViewModel

@{
    ViewData["Title"] = "Statistics By Campaigns";
}

<div class="text-center">
    <h1 class="display-4">Statistics By Campaign</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="StatisticsByCampaign" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CampaignId" class="control-label"></label>
                <select asp-for="CampaignId" asp-items="Model.Campaigns" class="form-control"></select>
                <span asp-validation-for="CampaignId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Show Statistics" class="btn btn-primary" />
                <a asp-action="StatisticsMain" class="btn btn-success"><i class="glyphicon glyphicon-menu-left"></i>Back to List</a>
            </div>
        </form>
    </div>
</div>