@model CallingScore.Web.Models.ToShowChartViewModel

@{
    ViewData["Title"] = "General Contact";
    string chartTitle = "Contact By Days";
    string chartUnit = "% Contact";
}

<div class="text-center">
    <h1 class="display-4">General Contact</h1>
</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Days', 'Data'],
            @foreach (var data in Model.ContactStatistics) {
                <text>['@data.Day', @data.PercentContact],</text>
            }
        ]);
        var options = {
            title: '@chartTitle',
            curveType: 'function',
            pointsVisible: true,
            lineWidth: 3,
            legend: 'none',
            hAxis: {title: 'Days'},
            vAxis: {title: '@chartUnit'},
            width: '100%',
            height: '100%',
            chartArea: {width: '85%', height: '75%'}
        };
        var chart = new google.visualization.LineChart(document.getElementById('line_chart'));
        chart.draw(data, options);
    }
</script>
<div class="container-fluid lead">
    <div id="line_chart" style="width: 800px; height: 400px"></div>
</div>
